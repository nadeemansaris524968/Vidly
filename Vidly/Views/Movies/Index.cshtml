@model IEnumerable<Vidly.Models.Movie>
@{
    ViewBag.title = "Movies";
    Layout = "~/Views/Shared/_Layout.cshtml";
}

<h2>@ViewBag.title</h2>
<table class="table table-bordered">
    <thead>
        <tr>
            <td>Movies</td>
        </tr>
    </thead>
    <tbody>
        @foreach(var movie in Model)
        {
            <tr>
                <td>@movie.Name</td>
            </tr>
        }
    </tbody>
</table>